        <![CDATA[
int N = 32;
int d = 8;

groesse( N, N );
formen("s");
farben( BLUE );

for( int x=0; x<N; x++ ) {
   for( int y=0; y<N; y++ ) {
      if( (x + y) % d == 0 || (x-y) % d == 0 ) {
	   farbe2( x, y, YELLOW );
      }
   }
}
