      <script type="text/javascript">
      index = 1;

      function next( step ) {
	index = (index + step ) % b.length;
	if( index < 0 ) index = b.length - 1;
	document.getElementById("big").src=b[index];
      }
      function show( i ) {
        index = i;
	document.getElementById("big").src=b[index];
      }

       </script>
