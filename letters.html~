        		for( i=0; i<b.length; i++ ) {
           			document.write( '<div class="thumb"><img class="thumbImage" src="' + b[i] +'" onclick="show(' + i +');" ></div>');
        		}
       	   	</script>
           	<div style="clear:both;" />
    	   </div>
   
